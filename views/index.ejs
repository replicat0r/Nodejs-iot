<body>
    <div>

        <h3> Current Status </h3>

    <form action="">

        <input name="brightness" id="brightness" type="text" value="<%=val%>"></input>
        <input type="submit" value="Submit">
            </form>

    </div>
</body>
<script>
    var socket = io();

 $('form').submit(function(){
    socket.emit('updateBright', $('#brightness').val());
    return false;
  });

</script>

